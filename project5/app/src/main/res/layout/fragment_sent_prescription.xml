<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_receiver_presciption"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.thanh.OnlinePharmacy.Prescription.fragments.ReceiverPresciption">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_send_1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name_transfer"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="Tên"
                        android:textColor="@color/colorText"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/fragment_send_prescript_tv_name_transfer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:textColor="@color/colorText"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_number_transfer"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="Lần giao dịch"
                        android:textColor="@color/colorText"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/fragment_send_prescript_et_number_transfer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:textColor="@color/colorText"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="Địa chỉ"
                        android:textColor="@color/colorText"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/fragment_send_prescript_et_address_transfer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:gravity="center|left"
                        android:text="xóm 5, thôn 3, xã Lộc An, H Bảo lâm, T lâm Đồng"
                        android:textColor="@color/colorText"
                        android:textSize="15dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:background="@color/colorTurquoise"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Tên thuốc"
                        android:textColor="@color/colorWhite"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="số lượng"
                        android:textColor="@color/colorWhite"
                        android:textSize="20dp" />
                </LinearLayout>


            </LinearLayout>


            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignStart="@+id/layout_send_1"
                android:layout_below="@+id/layout_send_1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearLayoutForm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" />

                    <ImageButton
                        android:id="@+id/fragment_send_prescript_btn_Add"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="right"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/button_round"
                        android:padding="10dp"
                        android:src="@android:drawable/ic_menu_add" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>


        <TextView
            android:id="@+id/fragment_send_prescript_btn_Submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_bg_buttom"
            android:gravity="center"
            android:text="Gửi toa thuốc!"
            android:textColor="@color/colorWhite"
            android:textSize="18dp" />
    </LinearLayout>


</ScrollView>