<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_receiver_presciption"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/activity_receiver_confirm_details_toolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/colorTurquoise"
            app:tabSelectedTextColor="#e66d6d"
            app:tabTextColor="#7c6854" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name_x"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="Mã đơn thuốc"
                        android:textColor="@color/colorText"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/activity_receiver_confirm_detail_tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="Mã"
                        android:textColor="@color/colorText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_id_x"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="Tên"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/activity_receiver_confirm_detail_tv_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="Email"
                        android:textColor="@color/colorText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_numberbuy_x"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="Ngày GĐ"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/activity_receiver_confirm_detail_tv_numberbuy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="Ngày mua"
                        android:textColor="@color/colorText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_address_x"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="Địa chỉ"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/activity_receiver_confirm_detail_tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="Địa Chỉ"
                        android:textColor="@color/colorText" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@color/colorTurquoise"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Tên thuốc"
                        android:textColor="@color/colorWhite"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="số lượng"
                        android:textColor="@color/colorWhite"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:background="#f1f1f1"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/activity_receiver_confirm_detail_lv_prescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="center|left"
                    android:text="Tổng giá tiền "
                    android:textColor="@color/colorText"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/activity_receiver_confirm_detail_tv_price"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/colorRed" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="center|right"
                    android:text="VND"
                    android:textAllCaps="true"
                    android:textColor="@color/colorRed"
                    android:textSize="15dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/activity_receiverPresciptionConfirm_btn_selectPay"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/ic_bg_buttom"
        android:gravity="center"
        android:text="phương thức Thanh Toán"
        android:textColor="@color/colorWhite" />
</RelativeLayout>
