<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e5e5"
    android:orientation="vertical"
    tools:context=".view.login.Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPeterRiver">

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/button_margin" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:alpha="0.8"
                android:scaleType="fitXY"
                android:src="@drawable/kamran" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/activity_edit_profile_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:theme="@style/ToolbarColoredBackArrow" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.alexzh.circleimageview.CircleImageView
                    android:id="@+id/circleview"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_user_info"
                    app:view_borderColor="#cccccc"
                    app:view_borderWidth="2dp"
                    app:view_shadowDx="2dp"
                    app:view_shadowDy="0dp"
                    app:view_shadowRadius="2dp" />

                <TextView
                    android:id="@+id/activity_profile_details_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Tên"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp">

            <android.support.v7.widget.CardView
                android:id="@+id/activity_profile_cv_show_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTurquoise">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="390dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="18dp"
                            android:src="@drawable/ic_mail_profile" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_centerHorizontal="true"
                                android:layout_weight="1"
                                android:gravity="bottom|left"
                                android:text="gmail"
                                android:textAllCaps="true"
                                android:textColor="@color/colorText" />

                            <TextView
                                android:id="@+id/activity_profile_details_tv_email"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="địa chỉ gmail"
                                android:textColor="@color/colorText"
                                android:textSize="16dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/colorView"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="15dp"
                            android:src="@drawable/ic_date" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="bottom|left"
                                android:text="ngày đăng ký"
                                android:textAllCaps="true"
                                android:textColor="@color/colorText" />

                            <TextView
                                android:id="@+id/activity_profile_tv_date"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_below="@+id/activity_profile_details_tv_email"
                                android:layout_weight="1"
                                android:text="29-06-2017"
                                android:textColor="@color/colorText"
                                android:textSize="16dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/colorView"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="15dp"
                            android:src="@drawable/ic_phone" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="bottom|left"
                                android:text="Mobile"
                                android:textAllCaps="true"
                                android:textColor="@color/colorText" />

                            <EditText
                                android:id="@+id/activity_edit_profile_et_mobile"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_centerHorizontal="true"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:inputType="phone"
                                android:text="098-280-3645"
                                android:textColor="@color/colorText"
                                android:textSize="16dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/colorView"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="15dp"
                            android:src="@drawable/ic_birthday" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="bottom|left"
                                android:text="Ngày sinh"
                                android:textAllCaps="true"
                                android:textColor="@color/colorText" />

                            <TextView
                                android:id="@+id/activity_edit_profile_tv_day"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:gravity="center|left"
                                android:text="23-10-1994"
                                android:textColor="@color/colorText"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/colorView"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="22dp"
                            android:src="@drawable/ic_address" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="4"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.2"
                                        android:background="@android:color/transparent"
                                        android:gravity="center|left"
                                        android:inputType="text"
                                        android:text="Số nhà-Đường"
                                        android:textColor="@color/colorText"
                                        android:textSize="16dp"
                                        android:textStyle="italic" />

                                    <EditText
                                        android:id="@+id/activity_edit_profile_et_address_street"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2"
                                        android:background="@android:color/transparent"
                                        android:gravity="center|left"
                                        android:inputType="text"
                                        android:text="179 - Trần Phú"
                                        android:textColor="@color/colorText"
                                        android:textSize="16dp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.2"
                                        android:background="@android:color/transparent"
                                        android:gravity="center|left"
                                        android:inputType="text"
                                        android:text="Phường (Xã)"
                                        android:textColor="@color/colorText"
                                        android:textSize="16dp"
                                        android:textStyle="italic" />

                                    <EditText
                                        android:id="@+id/activity_edit_profile_et_address_wards"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2"
                                        android:background="@android:color/transparent"
                                        android:gravity="center|left"
                                        android:inputType="text"
                                        android:text="Lộc An"
                                        android:textColor="@color/colorText"
                                        android:textSize="16dp"
                                        android:textStyle="bold" />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.2"
                                        android:background="@android:color/transparent"
                                        android:gravity="center|left"
                                        android:inputType="text"
                                        android:text="Quận (Huyện)"
                                        android:textColor="@color/colorText"
                                        android:textSize="16dp"
                                        android:textStyle="italic" />

                                    <EditText
                                        android:id="@+id/activity_edit_profile_et_address_districts"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2"
                                        android:background="@android:color/transparent"
                                        android:gravity="center|left"
                                        android:inputType="text"
                                        android:text="Bảo lâm"
                                        android:textColor="@color/colorText"
                                        android:textSize="16dp"
                                        android:textStyle="bold" />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.2"
                                        android:background="@android:color/transparent"
                                        android:gravity="center|left"
                                        android:inputType="text"
                                        android:text="TP (Tỉnh)"
                                        android:textColor="@color/colorText"
                                        android:textSize="16dp"
                                        android:textStyle="italic" />

                                    <EditText
                                        android:id="@+id/activity_edit_profile_et_address_city"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2"
                                        android:background="@android:color/transparent"
                                        android:gravity="center|left"
                                        android:inputType="text"
                                        android:text="Lâm Đồng"
                                        android:textColor="@color/colorText"
                                        android:textSize="16dp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/activity_profile_ll"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_bg_buttom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/activity_edit_profile_tv_btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Lưu thay đổi"
                    android:textColor="@color/colorWhite"
                    android:textSize="18dp" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>