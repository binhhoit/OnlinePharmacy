<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_receiver_presciption"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name_x"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:text="Mã Đơn Thuốc:"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/activity_receiverPresciptionConfirm_tv_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:text="Mã" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_id_x"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:paddingTop="15dp"
                android:text="Tên:"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/activity_receiverPresciptionConfirm_tv_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="15dp"
                android:text="Email" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_address_x"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:paddingTop="15dp"
                android:text="Địa chỉ:"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/activity_receiverPresciptionConfirm_tv_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="15dp"
                android:text="Địa Chỉ" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_numberbuy_x"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:paddingTop="15dp"
                android:text="Lần Giao Dịch:"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/activity_receiverPresciptionConfirm_spn_numberbuy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="15dp"></Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/colorPeterRiver"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_pharmacy"
                android:text="Tên thuốc"
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_pharmacy_right"
                android:text="số lượng"
                android:textAlignment="center"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1f1f1"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/activity_receiverPresciptionConfirm_lv_prescription"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Tổng giá tiền: " />

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/activity_receiverPresciptionConfirm_tv_price"
            android:gravity="center"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="VND"
            android:textAllCaps="true" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:gravity="center|bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/activity_receiverPresciptionConfirm_btn_selectPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_login_form"
            android:paddingBottom="5dp"
            android:paddingTop="2dp"
            android:text="phương thức Thanh Toán"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

</LinearLayout>
