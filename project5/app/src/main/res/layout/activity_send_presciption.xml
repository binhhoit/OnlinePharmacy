<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_receiver_presciption"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.thanh.project1.Prescription.fragments.receiverPresciption">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout_send_1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_name_transfer"
                android:text="Tên:"/>

            <TextView
                android:id="@+id/et_name_transfer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_address_transfer"
                android:text="Địa chỉ:"/>

            <EditText
                android:id="@+id/et_address_transfer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="xóm 5, thôn 3, xã Lộc An, H Bảo lâm, T lâm Đồng" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="16dp">

            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_number_transfer"
                android:text="Lần giao dịch:"/>

            <TextView
                android:id="@+id/et_number_transfer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/colorPeterRiver"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Tên thuốc"
                android:background="@drawable/table_pharmacy"
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/table_pharmacy_right"
                android:layout_weight="1"
                android:text="số lượng"
                android:textAlignment="center"
                android:textSize="20dp" />
            </LinearLayout>


    </LinearLayout>



    <ScrollView android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_send_1"
        android:layout_above="@+id/layout_send_3"     >
        <LinearLayout android:id="@+id/linearLayoutForm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout_send_3"
        android:layout_alignParentBottom="true">

        <ImageButton android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"

            android:layout_alignParentRight="true"
            android:contentDescription="ADD"
            android:padding="10dp"
            android:layout_marginBottom="5dp"


            android:layout_above="@+id/btnSubmit"
            android:background="@drawable/button_round"
            android:src="@android:drawable/ic_menu_add" />

        <Button android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_login_form"
            android:textColor="@color/colorWhite"

            android:text="Sumit!" />
    </LinearLayout>

</RelativeLayout>